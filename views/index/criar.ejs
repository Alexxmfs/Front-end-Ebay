<div class="cadastro-container container-fluid my-5">
    <div class="container">
        <form id="formCadastro" class="row">
            <!-- Coluna dos inputs de texto -->
            <div class="col-md-6">
                <div class="form-group">
                    <label for="categoria" class="cadastro-title">Categoria</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="categoria" name="categoria" placeholder="Digite a categoria do produto..">
                </div>

                <div class="form-group">
                    <label for="subcategoria" class="cadastro-title">Subcategoria</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="subcategoria" name="subcategoria" placeholder="Digite a subcategoria do produto..">
                </div>

                <div class="form-group">
                    <label for="titulo" class="cadastro-title">Titulo</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="titulo" name="titulo" placeholder="Digite a titulo do produto..">
                </div>

                <div class="form-group">
                    <label for="preco" class="cadastro-title">Preço</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="preco" name="preco" placeholder="Digite o preço do produto..">
                </div>

                <div class="form-group">
                    <label for="disponivel" class="cadastro-title">Disponível</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="disponivel" name="disponivel" placeholder="Digite a disponibilidade do produto..">
                </div>

                <div class="form-group">
                    <label for="vendido" class="cadastro-title">Vendido</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="vendido" name="vendido" placeholder="Digite a quantidade vendida do produto..">
                </div>

                <div class="form-group">
                    <label for="vendedor" class="cadastro-title">Vendedor</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="vendedor" name="vendedor" placeholder="Digite o nome do vendedor do produto..">
                </div>

                <div class="form-group">
                    <label for="detalhes" class="cadastro-title">Detalhes</label>
                    <input type="text" class="form-control campo-obrigatorio-vazio" id="detalhes" name="detalhes" placeholder="Digite os detalhes do produto..">
                </div>

                <button type="submit" class="btn btn-primary cor-botoes">Confirmar</button>
            </div>
        </form>
    </div>
</div>

<script>
    async function cadastrarProduto() {
        try {
            const categoria = document.getElementById('categoria').value;
            const subcategoria = document.getElementById('subcategoria').value;
            const titulo = document.getElementById('titulo').value;
            const preco = document.getElementById('preco').value;
            const disponivel = document.getElementById('disponivel').value;
            const vendido = document.getElementById('vendido').value;
            const vendedor = document.getElementById('vendedor').value;
            const detalhes = document.getElementById('detalhes').value;

            const response = await axios.post('http://localhost:8080/produto', {
                categoria,
                subcategoria,
                titulo,
                preco,
                disponivel,
                vendido,
                vendedor,
                detalhes
            });

            console.log(response.data); // Adicione este console.log para ver a resposta da API no terminal

            // Redireciona ou executa alguma ação após o cadastro bem-sucedido
        } catch (error) {
            console.error('Erro ao cadastrar produto:', error);
            // Manipula o erro de alguma forma (ex: exibe uma mensagem de erro para o usuário)
        }
    }

    document.getElementById('formCadastro').addEventListener('submit', function (event) {
        event.preventDefault(); // Evita o comportamento padrão de envio do formulário
        cadastrarProduto(); // Chama a função para cadastrar o produto
    });
</script>
